{% extends 'base.html.twig' %}

{% block title %}Hello RegistrationController!{% endblock %}

{% block body %}
<main class="my-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card HuO75">
                    <div class="card-header">Register</div>
                    {{ form_start(form) }}
                    <div class="card-body">
                        <form name="my-form" onsubmit="return validform()" action="success.php" method="">
                            <div class="form-group row">
                                <label for="name" class="col-md-4 col-form-label text-md-right">Имя</label>
                                <div class="col-md-6">
                                    {{form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                                    {# <input type="text" id="name" class="form-control" name="fname"> #}
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="family" class="col-md-4 col-form-label text-md-right">Фамилия</label>
                                <div class="col-md-6">
                                    {{form_row(form.family, {'attr': {'class': 'form-control'}}) }}
                                    {# <input type="text" id="family" class="form-control" name="family-name"> #}
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="email_address" class="col-md-4 col-form-label text-md-right">Кто
                                    пригласил</label>
                                <div class="col-md-6">
                                {{form_row(form.invited, {'attr': {'class': 'form-control'}}) }}
                                    {# <select name="category_id" id="category_id" class="form-control">
                                        {% for orgaz in orgazs %}
                                        <option value="">
                                            {{ orgaz.name }}
                                        </option>
                                        {% endfor %}
                                    </select> #}
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="company" class="col-md-4 col-form-label text-md-right">Организация</label>
                                <div class="col-md-6">
                                    {{form_row(form.company, {'attr': {'class': 'form-control'}}) }}
                                    {# <input type="text" id="company" class="form-control" name="company"> #}
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="phone_number" class="col-md-4 col-form-label text-md-right">Phone
                                    Number</label>
                                <div class="col-md-6">
                                    {{form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
                                    {# <input type="text" id="phone_number" class="form-control"> #}
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="present_address" class="col-md-4 col-form-label text-md-right">Пароль</label>
                                <div class="col-md-6">
                                    {{form_row(form.password.first, {'attr': {'class': 'form-control'}}) }}
                                    {# <input id="password" type="password" class="form-control" name="password" required autocomplete="current-password"> #}
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="permanent_address" class="col-md-4 col-form-label text-md-right">Повторите пароль</label>
                                <div class="col-md-6">
                                    {{form_row(form.password.second, {'attr': {'class': 'form-control'}}) }}
                                    {# <input id="2-password" type="password" class="form-control" name="2-password" required> #}
                                </div>
                            </div>

                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    Register
                                </button>
                            </div>
                            {{ form_end(form) }}
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>

{% endblock %}
